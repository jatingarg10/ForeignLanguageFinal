<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context="com.example.jatin.foreignlanguagefinal.German.GermanQuizPlayer">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/germanScore"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:text="0"
    android:textSize="22sp"
    android:gravity="center"
    android:textColor="@android:color/black"/>
<TextView
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:id="@+id/germanQuestions"
    android:layout_centerHorizontal="true"
    android:gravity="center"
    android:textSize="22sp"
    android:text="RANDOM DUMMY QUESTION FOR TESTING PURPOSE"
    android:layout_below="@+id/germanScore"
    android:layout_above="@+id/germanButton1"/>

<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/germanButton1"
    android:gravity="center"
    android:layout_margin="12dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/germanQuestions"/>
<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/germanButton2"
    android:gravity="center"
    android:layout_margin="8dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/frenchButton1"/>
<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/germanButton3"
    android:gravity="center"
    android:layout_margin="12dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/frenchButton2"/>
<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/germanButton4"
    android:gravity="center"
    android:layout_margin="12dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/frenchButton3"/>

</LinearLayout>
