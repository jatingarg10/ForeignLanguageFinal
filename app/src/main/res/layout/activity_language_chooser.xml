<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:background="@drawable/galaxy"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.jatin.foreignlanguagefinal.NavigationDrawer.LanguageChooser">

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

            <Button
                android:id="@+id/frenchBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/frenchround"
                android:layout_marginTop="110dp"
                android:text="FRENCH"
                android:textAlignment="center"
                android:textSize="60sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/spanishBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/spanishround"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:text="SPANISH"

                android:textAlignment="center"
                android:textSize="60sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/germanBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="GERMAN"
                android:background="@drawable/germanround"
                android:textAlignment="center"
                android:textSize="60sp"
                android:textStyle="bold" />
<!--
            <Button
                android:id="@+id/translateBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="TRANSLATE"
                android:layout_marginTop="20dp"
                android:background="@drawable/translateround"
                android:textAlignment="center"
                android:textSize="60sp"
                android:textStyle="bold" />
                -->

        </LinearLayout>

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/colorPrimary">

            <android.support.design.widget.NavigationView
                android:id="@+id/navigation_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                app:headerLayout="@layout/header"
                app:menu="@menu/drawer_menu">


            </android.support.design.widget.NavigationView>

        </LinearLayout>


    </android.support.v4.widget.DrawerLayout>


</LinearLayout>
